## If ".bam.bai" index files are missing, we need to create them
module load samtools
while read bam; do
    if [ ! -f "${bam}.bai" ]; then
        echo "Indexing: $bam"
        samtools index "$bam"
    else
        echo "Skipping (index exists): $bam"
    fi
done < /scratch/project_2009316/DutchSamples/X204SC23115958-Z01-F008/05.BAM/bam_final/all.bam.list


###
### Move processed samples to the final folder
###

mv /scratch/project_2009316/DutchSamples/X204SC23115958-Z01-F008/05.BAM/nodupl_RG_clip/*.bam $FINALBAMDIR
